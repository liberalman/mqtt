<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical" >

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp" >

        <RelativeLayout
            android:id="@+id/re_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:text="02"
                android:textColor="#353535"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/tv_day"
                android:gravity="bottom"
                android:paddingBottom="2dp"
                android:text="7月"
                android:textColor="#353535"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_day"
                android:paddingTop="5dp"
                android:text="合肥市蜀山区黄山路105"
                android:textColor="#576B95"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/re_time" >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                fresco:placeholderImage="@drawable/default_image" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/image_1"
                android:text="共4张"
                android:textColor="#dddddd"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:gravity="top|left"
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_num"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/image_1"
                android:ellipsize="end"
                android:text="今天真是个好日子啊啊今天真是个好日子啊啊今天真是个好日子啊啊今天真是个好日子啊啊今天真是个好日子啊啊今天真是个好日子啊啊今天真是个好日子啊啊今天真是个好日子啊啊今天真是个好日子啊啊今天真是个好日子啊啊"
                android:textColor="#353535"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>